<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.ConfiguracionesFragment">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     android:layout_margin="30dp">
     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="50dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Grabar Audio y video"
                 android:textColor="@android:color/holo_purple"/>

             <com.google.android.material.switchmaterial.SwitchMaterial
                 android:id="@+id/switchAudioVideo"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:theme="@style/SCBSwitch"
                 android:layout_marginStart="37dp"/>

         </LinearLayout>

     </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="50dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Botón de pánico"
                 android:textColor="@android:color/holo_purple"/>

             <com.google.android.material.switchmaterial.SwitchMaterial
                 android:id="@+id/switchBotonPanico"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:theme="@style/SCBSwitch"
                 android:layout_marginStart="37dp"/>

         </LinearLayout>

     </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="50dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Enviar notificaciones de ayuda"
                 android:textColor="@android:color/holo_purple"/>

             <com.google.android.material.switchmaterial.SwitchMaterial
                 android:id="@+id/switchMensajes"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:theme="@style/SCBSwitch"
                 android:layout_marginStart="37dp"/>

         </LinearLayout>

     </androidx.cardview.widget.CardView>

     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="50dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Activar notificaciones app"
                 android:textColor="@android:color/holo_purple"/>

             <com.google.android.material.switchmaterial.SwitchMaterial
                 android:id="@+id/switchNotificacionesApp"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:theme="@style/SCBSwitch"
                 android:layout_marginStart="37dp"/>

         </LinearLayout>

     </androidx.cardview.widget.CardView>
     <androidx.cardview.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="50dp">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Activar botón físico"
                 android:textColor="@android:color/holo_purple"/>

             <com.google.android.material.switchmaterial.SwitchMaterial
                 android:id="@+id/switchServicioApp"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:theme="@style/SCBSwitch"
                 android:layout_marginStart="37dp"/>

         </LinearLayout>

     </androidx.cardview.widget.CardView>

     <Button
         android:id="@+id/guardarConfiguracion"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:background="@drawable/boton_circular"
         android:textColor="@color/colorPrimary"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:padding="4dp"
         android:text="Guardar configuración"/>

     <Button
         android:id="@+id/actualizarConfiguracion"
         android:layout_width="150dp"
         android:layout_height="wrap_content"
         android:background="@drawable/boton_circular"
         android:textColor="@color/colorPrimary"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:visibility="gone"
         android:padding="4dp"
         android:text="Actualizar configuracion"/>
 </LinearLayout>



</layout>