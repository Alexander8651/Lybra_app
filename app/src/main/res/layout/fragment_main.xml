<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/botonPanico"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/botonpanicocirculo"
            android:scaleType="centerCrop"
            android:textColor="@android:color/white"
            android:src="@drawable/lgwarmi"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="123dp">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ltwarmi"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="25sp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@id/logo"
                android:text="CuÃ­date Mujer"/>
        </RelativeLayout>
        
        <TextureView
            android:id="@+id/view_finder"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <LinearLayout
            android:id="@+id/grabacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/grabandoVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text = "Grabando"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/botonPararGrabacion"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/botonpararvideo"
                android:textColor="@android:color/white"
                app:cardCornerRadius="70dp"
                app:cardElevation="20dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_stop_24" />



            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</layout>