<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="notificacion"
            type="com.amatai.warmi.requestmanager.apiresponses.Notification" />
    </data>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <androidx.cardview.widget.CardView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="8dp"
           android:background="@android:color/transparent"
           app:cardElevation="10dp"
           app:cardCornerRadius="14dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_margin="4dp">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@android:color/holo_purple"
                   android:text="@{notificacion.message}"
                   tools:text="Te invitamos a la conferencia Derechos pos la vida"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@android:color/holo_purple"
                   tools:text="2021-01-20 14:57:17"
                   android:text="@{notificacion.created_at}"
                   />
           </LinearLayout>
       </androidx.cardview.widget.CardView>
   </RelativeLayout>




</layout>