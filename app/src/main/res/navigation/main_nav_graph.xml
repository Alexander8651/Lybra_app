<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.amatai.lybra_app.ui.fragments.MainFragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_salirFragment"
            app:destination="@id/salirFragment" />
        <action
            android:id="@+id/action_mainFragment_to_directorioFragment"
            app:destination="@id/personasConfianza" />
        <action
            android:id="@+id/action_mainFragment_to_reporteEnviadosFragment"
            app:destination="@id/reporteEnviadosFragment" />
        <action
            android:id="@+id/action_mainFragment_to_configuracionesFragment"
            app:destination="@id/configuracionesFragment" />
        <action
            android:id="@+id/action_mainFragment_to_notificacionesFragment"
            app:destination="@id/notificacionesFragment" />
        <action
            android:id="@+id/action_mainFragment_to_mainArchivosFragment"
            app:destination="@id/mainArchivosFragment" />
        <action
            android:id="@+id/action_mainFragment_to_videoFragment2"
            app:destination="@id/videoFragment2" />
    </fragment>
    <fragment
        android:id="@+id/salirFragment"
        android:name="com.amatai.lybra_app.ui.fragments.SalirFragment"
        android:label=" Salir"
        tools:layout="@layout/fragment_salir" />
    <fragment
        android:id="@+id/personasConfianza"
        android:name="com.amatai.lybra_app.ui.fragments.DirectorioFragment"
        android:label="Personas de confianza"
        tools:layout="@layout/fragment_directorio">
        <action
            android:id="@+id/action_personasConfianza_to_agragarContactoFragment"
            app:destination="@id/agragarContactoFragment"
            app:enterAnim="@anim/slide_in_top"
            app:exitAnim="@anim/slide_out_button"
            app:popEnterAnim="@anim/slide_in_botton"
            app:popExitAnim="@anim/slide_out_top" />
        <action
            android:id="@+id/action_personasConfianza_to_editarContactoFragment"
            app:destination="@id/editarContactoFragment"
            app:enterAnim="@anim/zoom_in"
            app:exitAnim="@anim/zoomoutt"
            app:popEnterAnim="@anim/zoominn"
            app:popExitAnim="@anim/zoom_out" />
    </fragment>
    <fragment
        android:id="@+id/agragarContactoFragment"
        android:name="com.amatai.lybra_app.ui.fragments.AgragarContactoFragment"
        android:label="Agregar contacto"
        tools:layout="@layout/fragment_agragar_contacto" />
    <fragment
        android:id="@+id/editarContactoFragment"
        android:name="com.amatai.lybra_app.ui.fragments.EditarContactoFragment"
        tools:layout="@layout/fragment_editar_contacto" />
    <fragment
        android:id="@+id/archivosDetalleFragment"
        android:name="com.amatai.lybra_app.ui.fragments.ArchivosDetalleFragment"
        android:label="fragment_archivos_detalle"
        tools:layout="@layout/fragment_archivos_detalle" />
    <fragment
        android:id="@+id/reporteEnviadosFragment"
        android:name="com.amatai.lybra_app.ui.fragments.ReporteEnviadosFragment"
        android:label="Reportes"
        tools:layout="@layout/fragment_reporte_enviados" />
    <fragment
        android:id="@+id/configuracionesFragment"
        android:name="com.amatai.lybra_app.ui.fragments.ConfiguracionesFragment"
        android:label="Configuraciones"
        tools:layout="@layout/fragment_configuraciones" />
    <fragment
        android:id="@+id/notificacionesFragment"
        android:name="com.amatai.lybra_app.ui.fragments.NotificacionesFragment"
        android:label="Notificaciones"
        tools:layout="@layout/fragment_notificaciones" />
    <fragment
        android:id="@+id/mainArchivosFragment"
        android:name="com.amatai.lybra_app.ui.fragments.MainArchivosFragment"
        android:label="Archivos"
        tools:layout="@layout/fragment_main_archivos">
        <action
            android:id="@+id/action_mainArchivosFragment_to_archivosDetalleFragment"
            app:destination="@id/archivosDetalleFragment" />
    </fragment>
    <fragment
        android:id="@+id/videoFragment2"
        android:name="com.amatai.lybra_app.ui.fragments.VideoFragment"
        android:label="Video"
        tools:layout="@layout/fragment_video" />
</navigation>